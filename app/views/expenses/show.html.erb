<!-- shows the expense that was submitted -->
<div class="expense_table"> 
	<h3>Date:</h3>
	<p><%= @expense.date %></p>
	<h3>Amount:</h3>
	<p><%= @expense.amount %></p>
	<h3>Payment Type:</h3>	
	<p><%= @expense.payment %></p>
	<h3>Category:</h3>	
	<p><%= @expense.category %></p>
	<h3>Description:</h3>	
	<p><%= @expense.description %></p>
</div>

<!-- shows how long ago the expense was submitted -->
<h4 class="date">
	Submitted <%= time_ago_in_words(@expense.created_at) %> ago, on <%= @expense.created_at.strftime("%B %d, %Y") %>
</h4>

<%= link_to 'Edit', edit_expense_path(@expense) %>
<%= link_to 'Delete', expense_path(@expense), method: :delete, data: { confirm: "Are you sure?" } %>
