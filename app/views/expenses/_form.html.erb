<%= simple_form_for @expense do |f| %>
	<% if @expense.errors.any? %> 
		<div id="errors">
			<h2><%= pluralize(@expense.errors.count, "error") %> prevented this expense from saving</h2>
			<ul>
				<% @expense.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %> 
		</div>
	<% end %>

	<p>
		<%= f.label :date %><br>
		<%= f.date_select :date %>
	</p>

	<p>
		<%= f.label :amount %><br>
		<%= f.number_field :amount, :value => (number_with_precision(f.object.amount, :precision => 2)) %>
	</p>

	<p>
		<%= f.label :payment %><br>
		<%= f.select(:payment, (["Credit Card", "Cash"]), {include_blank: "Choose Payment Option"}) %>
	</p>

	<p>
		<%= f.label :category %><br>
		<%= f.select(:category, (["Food & Dining", "Auto & Transport", "Bills & Utilities", "Entertainment", "Shopping", "Travel", "Misc Expenses", "Other"]), {include_blank: "Choose a Purchase Category"}) %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_field :description, placeholder: "Describe the Expense" %>
	</p>

	<p>
		<%= f.submit %>
	</p>



<form class="form-horizontal">
  <fieldset>
    <legend>Enter in a New Expense</legend>
    <div class="form-group">
      <label for="select" class="col-lg-2 control-label"><%= f.label :date %></label>
      <div class="col-lg-10">
      	<%= f.date_select :date %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputEmail" placeholder="Email">
      </div>
    </div>
    <div class="form-group">
      <label for="textArea" class="col-lg-2 control-label">Textarea</label>
      <div class="col-lg-10">
        <textarea class="form-control" rows="3" id="textArea" style="margin-top: 0px; margin-bottom: 0px; height: 202px;"></textarea>
        <span class="help-block">A longer block of help text that breaks onto a new line and may extend beyond one line.</span>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="reset" class="btn btn-default">Cancel</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
</form>

<% end %>