<%= form_for @expense do |f| %>
	<% if @expense.errors.any? %> 
		<div id="errors">
			<h2><%= pluralize(@expense.errors.count, "error") %> prevented this expense from saving</h2>
			<ul>
				<% @expense.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %> 
		</div>
	<% end %>

	<p>
		<%= f.label :date %><br>
		<%= f.date_select :date %>
	</p>

	<p>
		<%= f.label :amount %><br>
		<%= f.text_field :amount %>
	</p>

	<p>
		<%= f.label :payment %><br>
		<%= f.select(:payment, options_for_select(["Credit Card", "Cash"]), {include_blank: "Choose Payment Option"}) %>
	</p>

	<p>
		<%= f.label :category %><br>
		<%= f.select(:category, options_for_select(["Food & Dining", "Auto & Transport", "Bills & Utilities", "Entertainment", "Shopping", "Travel", "Misc Expenses", "Other"]), {include_blank: "Choose a Purchase Category"}) %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_field :description, placeholder: "Describe the Expense" %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>


