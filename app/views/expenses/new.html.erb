<h1>new expense</h1>

<%= form_for :expense, url: expenses_path do |f| %>
	<p>
		<%= f.label :date %><br>
		<%= f.text_field :date %>
	</p>

	<p>
		<%= f.label :amount %><br>
		<%= f.text_field :amount %>
	</p>

	<p>
		<%= f.label :payment %><br>
		<%= f.text_field :payment %>
	</p>

	<p>
		<%= f.label :category %><br>
		<%= f.text_field :category %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_field :description %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>